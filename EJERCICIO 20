while True:
    try:
        numero = int(input("Escribe un numero dentro del rango 200 - 400: "))
    except ValueError:
        print("Debes escribir un n√∫mero.")
        continue
    if 200 <= numero <= 400:
        print("Si esta dentro del rango")
        continue
    else:
       print("No esta dentro del rango")
    if numero == 0: 
         break 
