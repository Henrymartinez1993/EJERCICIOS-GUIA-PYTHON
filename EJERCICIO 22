def sumar():
    resultado = a + b
    print (("Resultado"), (resultado))
def restar():
    resultado = a - b
    print (("El resultado es: "), (resultado))
def multiplicar():
    resultado = a * b
    print (("El resultado es: "), (resultado))
def dividir():
    resultado = a / b
    print (("El resultado es: "), (resultado))
while True:
    try:
        a = int(input("Ingresa el primer numero: \n"))
        b = int(input("Ingresa el segundo numero: \n"))
        print ("Elige una opcion")
        opcion = str(input(""" 
        1- Sumar
        2- Restar
        3- Multiplicar
        4- Dividir \n """))
    except:
        print ("Error")
        opcion = '?'
    if opcion == "1":
        sumar()
        break
    elif opcion == "2":
        restar()
        break
    elif opcion == "3":
        multiplicar()
        break
    elif opcion == "4":
        dividir()
        break
